{
  "name": "bookmania",
  "version": "1.0.0",
  "description": "fullstack MERN ecommerce",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm run start --prefix client",
    "client-install": "cd client && npm install",
    "dev": "concurrently --kill-others \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "keywords": [
    "ecommerce"
  ],
  "author": "Luis Febro & Ryan Dhungel",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "braintree": "^2.21.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-validator": "^5.3.1",
    "formidable": "^1.2.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.7",
    "morgan": "^1.9.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "nodemon": "^1.19.4"
  }
}
